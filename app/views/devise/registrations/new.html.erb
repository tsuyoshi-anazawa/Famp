<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>アカウント登録</h2>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 data field-row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field-row">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <label>ユーザ名</label><br />
            </div>
          </div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 field-row">
              <label>メールアドレス</label><br />
            </div>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 field-row">
              <label>パスワード</label><br />
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "new-password",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 field-row">
              <label>パスワード（確認用）</label><br />
            </div>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="actions">
          <div class="row">
            <div class="col-md-2 col-md-offset-5 actions-row">
              <%= f.submit "登録",class:"btn btn-warning" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
