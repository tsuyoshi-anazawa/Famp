<div class="container c-container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>ログイン</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 data field-row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field-row">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <label>メールアドレス</label><br />
            </div>
          </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 field-row">
              <label>パスワード</label><br />
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "current-password",class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="row">
          <div class="col-md-8 col-md-offset-2 field-row">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <label>ログイン情報を保存する</label>
              </div>
            <% end %>
          </div>
        </div>

        <div class="actions">
          <div class="row">
            <div class="col-md-2 col-md-offset-5 field-row login-action">
              <%= f.submit "ログイン",class:"btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 field-row">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
