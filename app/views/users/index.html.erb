<div class="container c-container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>ユーザ名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= link_to user.id, user_path(user.id) %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
        </tbody>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= paginate @users, class: "paginate" %>
    </div>
  </div>
</div>