<% if @post.errors.any? %>
  <div class="error">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container c-container">
  <div class="row post-newtitle">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="center">新規投稿</h1>
    </div>
  </div>

  <div class="row">
    <div class="data col-md-6 col-md-offset-3">
      <%= form_for(@post, url: posts_path) do |f| %>

        <div class="field-row">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <label>タイトル</label>
            </div>
          </div>
          <%= f.text_field :title,class:"col-md-6 col-md-offset-3" %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 field-row">
              <label>本文</label>
            </div>
          </div>
          <%= f.text_area :content,rows:'7',class:"col-md-8 col-md-offset-2" %>
        </div>

        <div class="actions">
          <div class="row">
            <div class="col-md-2 col-md-offset-5 actions-row">
              <p class="text-center"><%= f.submit "投稿",class:"btn btn-info" %></p>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "戻る", posts_path %>
    </div>
  </div>
</div>