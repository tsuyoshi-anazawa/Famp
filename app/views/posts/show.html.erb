<h1>投稿詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div>
        <h3><%= @post.title %></h3>

        <p><%= @post.content %></p>
      </div>

      <% if @post.user.id == current_user.id %>
        <%= link_to post_path(@post),method: :delete,"data-confirm" => "この投稿を削除しますか？" do %>
          <button class="btn btn-danger">削除</button>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
