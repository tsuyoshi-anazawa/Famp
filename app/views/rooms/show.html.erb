<div class="c-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>ダイレクトメッセージ</h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h4>ルームメンバー</h4>
    <% @entries.each do |e| %>
      <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.name %>さん</a></strong></h5>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2 center data">

    <hr>
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <strong><%= m.message %></strong>
          <small><strong><a href="/users/<%= m.user_id %>"><%= attachment_image_tag m.user, :profile_image, size: "30x30", format: "png", fallback: "/images/no_image.png",class:"profile_image" %><%= m.user.name %></a></strong></small>
    <hr>
        <% end %>
      <% else %>
        <h3 class="text-center">メッセージはまだありません</h3>
      <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 message-field">
    <%= form_for @message do |f| %>
      <%= f.text_field :message, :placeholder => "ここにメッセージを入力" ,class:"col-md-8 col-md-offset-2" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <%= f.submit "送信",class:"btn btn-success" %>
    <% end %>
  </div>
</div>
